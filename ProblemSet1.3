s = 'ifagkivkfkfjmdmkcndmdmcvhhffffgghffkdshhgopqrstuvhskdkkilllkjklopqrstuvvv'
longString = [s[0]]
currentString = [s[0]]
for i in range(1, len(s)):
    if s[i] >= s[i - 1]:
        currentString += s[i]
        print('The current string is: ' + str(currentString))
    else:
        if len(currentString) > len(longString):
            longString = currentString
            print('The longest string is: ' + str(longString))
        currentString = s[i]
finalString = max(longString, currentString)
print('The final string is: ' + finalString)
